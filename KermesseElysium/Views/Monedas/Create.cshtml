@model KermesseElysium.Models.Moneda

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Opción</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="Index">Moneda</a></li>
                    <li class="breadcrumb-item active">Crear</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="row mb-2">

        </div>
    </div><!-- /.container-fluid -->
</div>

<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Crear moneda</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Nombre <span class="text-danger">*</span></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlenght = "45", @placeholder = "Escriba el nombre de la moneda" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger", data_val_required = "El campo nombre es obligatorio." })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Símbolo <span class="text-danger">*</span></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.simbolo, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlenght = "4", @placeholder = "Escriba el símbolo de la moneda" } })
                        @Html.ValidationMessageFor(model => model.simbolo, "", new { @class = "text-danger", data_val_required = "El campo símbolo es obligatorio." })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.estado, new { @Value = 1 })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Create" class="btn btn-secondary" />
        </div>
    }
</div>
    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
