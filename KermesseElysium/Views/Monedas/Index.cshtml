@model IEnumerable<KermesseElysium.Models.Moneda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Moneda</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Moneda</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="row mb-2">
            <div class="row mb-2 badge bg-primary text-wrap">
                @Html.ActionLink("Crear Reporte", "VerReporteMoneda", new { tipo = "PDF" })
            </div>
        </div>
    </div><!-- /.container-fluid -->
</div>

<div class="card">
    <div class="card-header">
        <div style="text-align:right;">
            <button type="button" class="btn btn-secondary btn-sm" onclick="window.location.href='./Monedas/Create'">
                <i class="fas fa-plus"></i> Crear nueva moneda
            </button>
        </div> 
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.simbolo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.simbolo)
                        </td>
                        <td>
                            <span style="cursor:pointer;" title="Ver detalles"><a onclick="window.location.href='./Monedas/Delete/' + @item.idMoneda"><i class="fas fa-eye"></i></a></span>
                            <span style="cursor:pointer;" title="Editar"><a onclick="window.location.href='./Monedas/Edit/' + @item.idMoneda"><i class="fas fa-edit"></i></a></span>
                            <span style="cursor:pointer;" title="Eliminar"><a onclick="window.location.href='./Monedas/Delete/' + @item.idMoneda"><i class="fas fa-trash"></i></a></span>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.simbolo)</th>
                    <th>Acciones</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>