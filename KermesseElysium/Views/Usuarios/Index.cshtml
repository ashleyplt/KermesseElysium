@model IEnumerable<KermesseElysium.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Usuario</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Usuario</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card">
    <div class="card-header">
        <div style="text-align:right;">
            <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Create", "Usuarios")'">
                <i class="fas fa-plus"></i> Crear nuevo usuario
            </button>
            <div class="btn-group">
                <button type="button" class="btn-sm btn-secondary dropdown-toggle dropdown-icon border border-secondary" data-toggle="dropdown">
                    Exportar
                </button>
                <div class="dropdown-menu" role="menu">
                    <a class="dropdown-item" href="@Url.Action("VerReporteUsuario", new { tipo = "PDF", buscar = Request.Form["buscar"] })">PDF</a>
                    <a class="dropdown-item" href="@Url.Action("VerReporteUsuario", new { tipo = "Word", buscar = Request.Form["buscar"] })">Word</a>
                    <a class="dropdown-item" href="@Url.Action("VerReporteUsuario", new { tipo = "Excel", buscar = Request.Form["buscar"] })">Excel</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body" >
        @using (Html.BeginForm("Index", "Usuarios", FormMethod.Post))
        {
        <div style="text-align:right; float:right;">
            <div class"row">
                <div class="input-group">
                    @Html.TextBox("buscar", "", new { @class = "form-control" })
                    <button type="submit" class="btn btn-dark">Buscar</button>
                </div>
            </div>
        </div>
        }
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.nombres)</th>
                    <th>@Html.DisplayNameFor(model => model.apellidos)</th>
                    <th>@Html.DisplayNameFor(model => model.userName)</th>
                    <th>@Html.DisplayNameFor(model => model.email)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string estado = "table-default";
                    string imgEstado = "fa-ban";
                    string titleEstado = "Eliminar";
                    if (item.estado.Equals(3))
                    {
                        estado = "table-danger";
                        imgEstado = "fa-check";
                        titleEstado = "Habilitar";
                    }
                <tr class="@estado">
                    <td>
                        @Html.DisplayFor(modelItem => item.nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.userName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        <span style="cursor:pointer;" title="Ver detalles"><a href="@Url.Action("Details", "Usuarios", new { id = item.idUsuario })" style="color:black;"><i class="fas fa-eye"></i></a></span>
                        <span style="cursor:pointer;" title="Editar"><a href="@Url.Action("Edit", "Usuarios", new { id = item.idUsuario })" style="color:black;"><i class="fas fa-edit"></i></a></span>
                        <span style="cursor:pointer;" title="@titleEstado"><a href="@Url.Action("Delete", "Usuarios", new { id = item.idUsuario })" style="color:darkred;"><i class="fas @imgEstado"></i></a></span>
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.nombres)</th>
                    <th>@Html.DisplayNameFor(model => model.apellidos)</th>
                    <th>@Html.DisplayNameFor(model => model.userName)</th>
                    <th>@Html.DisplayNameFor(model => model.email)</th>
                    <th>Acciones</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


