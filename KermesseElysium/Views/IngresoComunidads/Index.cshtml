@model IEnumerable<KermesseElysium.Models.vw_ingresocomunidad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Ingreso de la comunidad</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="breadcrumb-item active">Ingreso de la comunidad</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="row mb-2">

        </div>
    </div><!-- /.container-fluid -->
</div>

<div class="card">
    <div class="card-header">
        <div style="text-align:right;">
            <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Create", "IngresoComunidads")'">
                <i class="fas fa-plus"></i> Agregar nuevo ingreso
            </button>
            <div class="btn-group">
                <button type="button" class="btn-sm btn-secondary dropdown-toggle dropdown-icon border border-secondary" data-toggle="dropdown">
                    Exportar
                </button>
                <div class="dropdown-menu" role="menu">
                    <a class="dropdown-item" href="@Url.Action("VerReporteIngresoComunidad", new { tipo = "PDF", buscar = Request.Form["buscar"] })">PDF</a>
                    <a class="dropdown-item" href="@Url.Action("VerReporteIngresoComunidad", new { tipo = "Word", buscar = Request.Form["buscar"] })">Word</a>
                    <a class="dropdown-item" href="@Url.Action("VerReporteIngresoComunidad", new { tipo = "Excel", buscar = Request.Form["buscar"] })">Excel</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Index", "IngresoComunidads", FormMethod.Post))
        {
            <div style="text-align:right; float:right;">
                <div class"row">
                    <div class="input-group">
                        @Html.TextBox("buscar", "", new { @class = "form-control" })
                        <button type="submit" class="btn btn-dark">Buscar</button>
                    </div>
                </div>
            </div>
        }
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.comunidad)</th>
                <th>@Html.DisplayNameFor(model => model.kermesse)</th>
                <th>@Html.DisplayNameFor(model => model.producto)</th>
                <th>@Html.DisplayNameFor(model => model.cantProducto)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.comunidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kermesse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cantProducto)
                </td>
                <td>
                    <span style="cursor:pointer;" title="Ver detalles"><a href="@Url.Action("Details", "IngresoComunidads", new { id = item.idIngresoComunidad })" style="color:black;"><i class="fas fa-eye"></i></a></span>
                    <span style="cursor:pointer;" title="Editar"><a href="@Url.Action("Edit", "IngresoComunidads", new { id = item.idIngresoComunidad })" style="color:black;"><i class="fas fa-edit"></i></a></span>
                    <span style="cursor:pointer;" title="Eliminar"><a href="@Url.Action("Delete", "IngresoComunidads", new { id = item.idIngresoComunidad })" style="color:black;"><i class="fas fa-trash"></i></a></span>
                    <span style="cursor:pointer;" title="Exportar a PDF"><a href="@Url.Action("VerReporteIngresoComunidadIndiv", "IngresoComunidads", new { id = item.idIngresoComunidad })" style="color:black;"><i class="fas fa-file-export"></i></a></span>
                </td>
            </tr>
            }
        </tbody>
    </table>
    </div>

</div>