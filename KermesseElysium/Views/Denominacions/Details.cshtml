@model KermesseElysium.Models.Denominacion

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Denominacion</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="breadcrumb-item"> @Html.ActionLink("Denominacion", "Index", "Denominacions")</li>
                    <li class="breadcrumb-item active">Detalles</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="row mb-2">

        </div>
    </div><!-- /.container-fluid -->
</div>

<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Detalles denominacion</h3>
    </div>
    <div class="card-body">

        <div class="info-box bg-light">
            <div class="info-box-content">

                @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "info-box-number mb-0" })
                <span class="info-box-text">@Html.DisplayFor(model => model.valor)</span>
            </div>
        </div>
        <div class="info-box bg-light">
            <div class="info-box-content">

                @Html.LabelFor(model => model.valorLetras, htmlAttributes: new { @class = "info-box-number mb-0" })
                <span class="info-box-text">@Html.DisplayFor(model => model.valorLetras)</span>
            </div>
        </div>
        <div class="info-box bg-light">
            <div class="info-box-content">
                @Html.LabelFor(model => model.Moneda1.nombre, htmlAttributes: new { @class = "info-box-number mb-0" })
                <span class="info-box-text">@Html.DisplayFor(model => model.Moneda1.nombre)</span>
            </div>
        </div>

        
    </div>
    <div class="card-footer">
        <a class="btn btn-default" href="@Url.Action("Index", "Denominacions")">Volver</a>
    </div>
</div>
